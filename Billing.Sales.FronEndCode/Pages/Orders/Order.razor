@page "/orders"
@using Billing.Sales.FrontEndCode.Models
@using Billing.Sales.FrontEndCode.Services
@inject CustomerService customerService
@inject ProductService productService
@inject OrderService orderService
@inject IJSRuntime JS

@* ===========================
   NUEVA VENTA - Página Orders
   =========================== *@

<div class="container mt-4">
    <h2 class="mb-3">Nueva Venta</h2>

    <!-- HEADER: factura, fecha, info cliente -->
    <div class="row mb-3">
        <div class="col-lg-6">
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <div>Datos del Cliente & Factura</div>
                    <small class="text-white-50">Auto</small>
                </div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-md-5">
                            <label class="form-label small">Nº Factura</label>
                            <input class="form-control form-control-sm" readonly value="@orderModel.InvoiceNumber" />
                        </div>

                        <div class="col-md-5">
                            <label class="form-label small">Fecha</label>
                            <input type="datetime-local"
                                   class="form-control form-control-sm"
                                   @bind="orderModel.Date"
                                   @bind:format="yyyy-MM-ddTHH:mm"
                                   readonly />
                        </div>

                        <div class="col-md-2 d-flex align-items-end">
                            <button class="btn btn-outline-primary w-100 btn-sm" @onclick="OpenCustomerModal">
                                <i class="bi bi-search"></i> Cliente
                            </button>
                        </div>
                    </div>

                    <hr />

                    <div class="row g-2">
                        <div class="col-6 col-md-3">
                            <label class="form-label small">ID</label>
                            <input class="form-control form-control-sm" readonly value="@orderModel.CustomerId" />
                        </div>
                        <div class="col-6 col-md-3">
                            <label class="form-label small">Cédula</label>
                            <input class="form-control form-control-sm" readonly value="@orderModel.CustomerIdentificationNumber" />
                        </div>
                        <div class="col-6 col-md-3">
                            <label class="form-label small">Nombres</label>
                            <input class="form-control form-control-sm" readonly value="@orderModel.CustomerFirstName" />
                        </div>
                        <div class="col-6 col-md-3">
                            <label class="form-label small">Apellidos</label>
                            <input class="form-control form-control-sm" readonly value="@orderModel.CustomerLastName" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label small">Dirección</label>
                            <input class="form-control form-control-sm" readonly value="@orderModel.CustomerAddress" />
                        </div>
                        <div class="col-6 col-md-3">
                            <label class="form-label small">Teléfono</label>
                            <input class="form-control form-control-sm" readonly value="@orderModel.CustomerPhoneNumber" />
                        </div>
                        <div class="col-6 col-md-3">
                            <label class="form-label small">Ciudad</label>
                            <input class="form-control form-control-sm" readonly value="@orderModel.CustomerCity" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label small">Email</label>
                            <input class="form-control form-control-sm" readonly value="@orderModel.CustomerEmailAddress" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- PRODUCT SELECT PREVIEW -->
        <div class="col-lg-6">
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <div>Productos</div>
                    <small class="text-white-50">Buscar y agregar</small>
                </div>

                <div class="card-body">

                    <!-- 🔍 BOTÓN BUSCAR PRODUCTO -->
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <button class="btn btn-success w-100 btn-sm" @onclick="OpenProductModal">
                                <i class="bi bi-search"></i> Buscar Producto
                            </button>
                        </div>
                    </div>

                    <!-- 🧾 CAMPOS DEL PRODUCTO -->
                    <div class="row g-2">
                        <div class="col-6 col-sm-4">
                            <label class="form-label small">Id</label>
                            <input class="form-control form-control-sm" readonly value="@(selectedProduct?.Id.ToString() ?? "")" />
                        </div>

                        <div class="col-6 col-sm-4">
                            <label class="form-label small">Nombre</label>
                            <input class="form-control form-control-sm" readonly value="@(selectedProduct?.Name ?? "")" />
                        </div>

                        <div class="col-6 col-sm-4">
                            <label class="form-label small">Marca</label>
                            <input class="form-control form-control-sm" readonly value="@(selectedProduct?.Brand ?? "")" />
                        </div>

                        <div class="col-6 col-sm-4">
                            <label class="form-label small">Presentación</label>
                            <input class="form-control form-control-sm" readonly value="@(selectedProduct?.Presentation ?? "")" />
                        </div>

                        <div class="col-6 col-sm-4">
                            <label class="form-label small">Precio</label>
                            <input class="form-control form-control-sm text-end" readonly value="@(selectedProduct != null ? selectedProduct.Price.ToString("N2") : "")" />
                        </div>

                        <div class="col-6 col-sm-4">
                            <label class="form-label small">Stock</label>
                            <input class="form-control form-control-sm text-end" readonly value="@(selectedProduct != null ? selectedProduct.Stock.ToString() : "")" />
                        </div>

                        <div class="col-6 col-sm-4">
                            <label class="form-label small">Cantidad</label>
                            <input type="number" min="1" class="form-control form-control-sm text-end"
                                   @bind="selectedQuantity"
                                   @bind:event="oninput" />
                        </div>
                    </div>

                    <!-- ➕ BOTÓN AGREGAR (ABAJO Y ANCHO COMPLETO) -->
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <button class="btn btn-primary w-100 btn-sm" @onclick="AddSelectedProduct">
                                <i class="bi bi-plus-circle"></i> Agregar
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

    <!-- DETAIL + SUMMARY -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-dark text-white">Detalle de Venta</div>
                <div class="card-body p-2">
                    <div style="max-height:440px; overflow:auto;">
                        <table class="table table-sm table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Producto</th>
                                    <th>Marca</th>
                                    <th>Presentación</th>
                                    <th class="text-end">Precio U.</th>
                                    <th class="text-end">Cantidad</th>
                                    <th class="text-end">Total</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!orderDetails.Any())
                                {
                                    <tr>
                                        <td colspan="8" class="text-center text-muted py-4">No hay productos agregados</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var d in orderDetails)
                                    {
                                        <tr>
                                            <td>@d.ProductId</td>
                                            <td>@d.ProductName</td>
                                            <td>@d.ProductBrand</td>
                                            <td>@d.ProductPresentation</td>
                                            <td class="text-end numeric-col">@d.UnitPrice.ToString("N2")</td>
                                            <td class="text-end" style="width:120px;">
                                                <input class="form-control form-control-sm text-end"
                                                       type="number"
                                                       min="1"
                                                       value="@d.Quantity"
                                                       @onchange="(e) => OnQuantityChange(d, e.Value?.ToString())"
                                                       style="width:90px; display:inline-block;" />
                                            </td>
                                            <td class="text-end numeric-col">@d.TotalPrice.ToString("N2")</td>
                                            <td class="text-center">
                                                <button class="btn btn-sm btn-danger" @onclick="() => RemoveLine(d.ProductId)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- resumen -->
        <div class="col-lg-4">
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-secondary text-white">Resumen</div>
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>Subtotal</div>
                        <div class="text-end fw-monospace">@Subtotal.ToString("N2")</div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div>IVA (15%)</div>
                        <div class="text-end fw-monospace">@Tax.ToString("N2")</div>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between fw-bold fs-5">
                        <div>Total</div>
                        <div class="text-end fw-monospace">@Total.ToString("N2")</div>
                    </div>

                    <div class="mt-3 d-grid gap-2">
                        <button class="btn btn-success" @onclick="SaveOrder" disabled="@(!CanSave)">
                            <i class="bi bi-save me-1"></i> Guardar Venta
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="ClearAll">
                            Limpiar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

